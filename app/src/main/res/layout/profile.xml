<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.roacult.madinatic.utils.states.ViewState"/>
        <variable name="state" type="ViewState"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:visibility="@{state == ViewState.SUCCESS ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_height="330dp"
                android:layout_width="match_parent">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="?attr/colorPrimary">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guideline27"
                            app:layout_constraintGuide_percent="0.57"/>
                        <androidx.constraintlayout.widget.Guideline
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guideline28"
                            app:layout_constraintGuide_percent="0.11"/>
                        <androidx.constraintlayout.widget.Guideline
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guideline29"
                            app:layout_constraintGuide_percent="0.1"/>
                        <androidx.constraintlayout.widget.Guideline
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/guideline30"
                            app:layout_constraintGuide_percent="0.9"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/profile_holder"
                            app:layout_constraintEnd_toStartOf="@+id/guideline30"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/guideline27"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/guideline28"
                            app:layout_constraintStart_toStartOf="@+id/guideline29"
                            android:layout_marginStart="8dp"
                            tools:src="@tools:sample/avatars"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/guideline27"
                            android:textColor="@color/primaryTextColor"
                            tools:text="@tools:sample/full_names"
                            android:textSize="25sp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="@+id/guideline29"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/guideline30"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/year"
                            app:layout_constraintTop_toBottomOf="@+id/name"
                            app:layout_constraintEnd_toStartOf="@+id/guideline30"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="@+id/guideline29"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/primaryTextColor"
                            tools:text="Algeria.Tlemcen"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAlignment="viewStart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/mtrl_background_outlined"
                        android:drawableStart="@drawable/registration_name"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black_white_icons"
                        android:textSize="17sp"
                        tools:ignore="RtlCompat,RtlSymmetry"
                        tools:text="@tools:sample/full_names" />

                    <TextView
                        android:textAlignment="viewStart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/mtrl_background_outlined"
                        android:drawableStart="@drawable/email_outline"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black_white_icons"
                        android:textSize="17sp"
                        tools:ignore="RtlCompat,RtlSymmetry"
                        tools:text="@tools:sample/us_zipcodes" />

                    <TextView
                        android:textAlignment="viewStart"
                        android:id="@+id/phoneNumbre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/mtrl_background_outlined"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black_white_icons"
                        android:textSize="17sp"
                        tools:ignore="RtlCompat,RtlSymmetry"
                        tools:text="@tools:sample/us_phones" />

                    <TextView
                        android:textAlignment="viewStart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/mtrl_background_outlined"
                        android:drawableStart="@drawable/map"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/address"
                        android:textColor="@color/black_white_icons"
                        android:textSize="17sp"
                        tools:ignore="RtlCompat,RtlSymmetry" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <iammert.com.view.scalinglib.ScalingLayout
                tools:visibility="gone"
                android:background="@color/secondaryColor"
                android:id="@+id/scalingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:radiusFactor="1"
                android:layout_gravity="center_horizontal"
                app:layout_behavior=".utils.ScaleBehavior">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            app:srcCompat="@drawable/settings_outline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/modifier_votre_profile"
                            android:textColor="@color/secondaryTextColor"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            app:srcCompat="@drawable/lock_outline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/modifier_votre_mots_de_passe"
                            android:textColor="@color/secondaryTextColor"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </iammert.com.view.scalinglib.ScalingLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:visibility="@{state == ViewState.EMPTY ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>